using System;
using System.Collections.Generic;
using System.Linq;
using System.Windows.Forms;

namespace ForumApp
{
    public partial class FormMain : Form
    {
        private List<ForumUser> users = new List<ForumUser>();
        private ForumActions forumActions = new ForumActions();

        public FormMain()
        {
            InitializeComponent();
        }

        private void btnAddRegular_Click(object sender, EventArgs e)
        {
            string username = txtUsername.Text.Trim();
            if (!string.IsNullOrEmpty(username))
            {
                users.Add(new RegularUser(username));
                txtUsername.Clear();
                MessageBox.Show("Regular користувача додано.");
            }
            else
            {
                MessageBox.Show("Будь ласка, введіть ім'я користувача.");
            }
        }

        private void btnAddAdmin_Click(object sender, EventArgs e)
        {
            string username = txtUsername.Text.Trim();
            if (!string.IsNullOrEmpty(username))
            {
                users.Add(new AdminUser(username));
                txtUsername.Clear();
                MessageBox.Show("Admin користувача додано.");
            }
            else
            {
                MessageBox.Show("Будь ласка, введіть ім'я користувача.");
            }
        }

        private void btnShowAll_Click(object sender, EventArgs e)
        {
            listBox1.Items.Clear();
            foreach (var user in users)
            {
                listBox1.Items.Add($"{user.GetType().Name}: {user.Username}");
            }
        }

        private void btnSort_Click(object sender, EventArgs e)
        {
            var sortedUsers = users.OrderBy(u => u.Username).ToList();
            listBox1.Items.Clear();
            foreach (var user in sortedUsers)
            {
                listBox1.Items.Add($"{user.GetType().Name}: {user.Username}");
            }
        }

        private void btnFilterAdmins_Click(object sender, EventArgs e)
        {
            var admins = users.Where(u => u is AdminUser);
            listBox1.Items.Clear();
            foreach (var admin in admins)
            {
                listBox1.Items.Add($"Admin: {admin.Username}");
            }
        }

        private void btnPerformAction_Click(object sender, EventArgs e)
        {
            foreach (var user in users)
            {
                user.PerformAction();
            }
            MessageBox.Show("Дії виконані (перевір консоль).");
        }

        private void btnNotify_Click(object sender, EventArgs e)
        {
            foreach (var user in users)
            {
                if (user is RegularUser regular)
                    forumActions.NotifyUser(regular);
                else if (user is AdminUser admin)
                    forumActions.NotifyUser(admin);
            }
            MessageBox.Show("Сповіщення надіслано (перевір консоль).");
        }
    }
}
